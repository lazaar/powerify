  "productId": {{ product.id }},
  {% if product.metafields.powerify.settings != blank  %}
    "settings": {{ product.metafields.powerify.settings }},
  {% else %}
      "settings": {},
  {% endif %}

  {% if product.metafields.powerify.reviews != blank  %}
    "reviews": {{ product.metafields.powerify.reviews }}
  {% else %}
     "reviews": {}
  {% endif %}

}